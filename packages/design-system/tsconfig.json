{
  "extends": "@repo/typescript-config/react-library.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "#/base/*": ["./*"],
      "#/*": ["./src/*"],
      "@design-system/*": ["./src/*"]
    }
  },
  "include": [
    ".d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.mjs",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "dist", "prisma/generated"]
}
